<link defer rel="stylesheet" type="text/css" href="/static/stylesheets/shared/index.css"> 
<script defer src="/static/javascripts/index.js"></script>

<div class="row">
	
	<div class="col-lg-5">
		<div class="form-group">
			<label for="selCategory">Select Category</label>
			<select class="form-control" id="selCategory">
				<option value="">Plaese Select</option>
				<% if(Categories!=null){ for ( var i = 0; i < Categories.length; i++ ) { if(Categories[i].CategoryName != 'Language'){%>
					<option value="<%= Categories[i]._id %>"><%= Categories[i].CategoryName %></option>
				<% }}} %>
			</select>
		</div>
	</div>
	<div class="col-lg-3">
		<div class="form-group">
			<label for="selSourceLang">Translate From</label>
			<select class="form-control" id="selSourceLang">
				<option value="">Plaese Select</option>
				<% if(Languages!=null){ for ( var i = 0; i < Languages.length; i++ ) { %>
					<option value="<%= Languages[i]._id %>"><%= Languages[i].LanguageName %></option>
				<% }} %>
			</select>
		</div>
	</div>  
	<div class="col-lg-1">
		<div id="divSwapLang" title="Swap Language" class="text-center"><i class="fa fa-exchange" aria-hidden="true"></i></div>
	</div>
	<div class="col-lg-3">
		<div class="form-group">
			<label for="selDestLang">Translate To</label>
			<select class="form-control" id="selDestLang">
				<option value="">Plaese Select</option>
				<% if(Languages!=null){ for ( var i = 0; i < Languages.length; i++ ) { %>
					<option value="<%= Languages[i]._id %>"><%= Languages[i].LanguageName %></option>
				<% }} %>
			</select> 
		</div>
	</div>
	<div class="col-lg-12">
		<div class="table-responsive my-table-box">
			<table class="table table-striped table-hover table-bordered table-sm my-table" id="tblTrans">
			</table>
		</div>
	</div>
  </div>